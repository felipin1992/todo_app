<div><%= link_to "Crear ToDo", todos_new_path %> </div>

<div class="row">
  <div class="col-md-1">
  </div>
   <div class="col-md-10">
    <% @todos.each do |i|%>
      <div class="card jumbotron">
        <h1> <%= link_to i.description, todo_edit_path(i) %> </h1>
        <% if i.completed == true %>
        <p>Completado</p>
        <% else %>
        <%= link_to "Completar", todo_completed_path(i) %>
        <% end %>
        <%= link_to "Borrar", i, method: :delete %>
           </div>
      <% end %>
 </div>
</div>
